type User {
  id: ID! @id
  refresh_token: ID!
  username: String! @unique
  password: String!
  posts: [Post!]!
  role: Role! @default(value: GUEST)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Post {
  id: ID! @id
  title: String!
  published: Boolean! @default(value: false)
  author: User @relation(link: INLINE)

  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Role {
  ADMIN
  USER
  GUEST
}
